{
  "name": "mcp-catalogue",
  "version": "1.0.0",
  "description": "MCP Server Catalogue PWA",
  "scripts": {
    "build-css": "tailwindcss -i ./css/src/input.css -o ./css/tailwind.css --watch",
    "build-css-prod": "tailwindcss -i ./css/src/input.css -o ./css/tailwind.css --minify",
    "dev": "npm run build-css",
    "build": "npm run build-css-prod"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.0"
  },
  "keywords": ["mcp", "catalogue", "pwa", "servers"],
  "author": "",
  "license": "MIT"
}